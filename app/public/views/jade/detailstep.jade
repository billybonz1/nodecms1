.row(ng-init="getStep()")
    .col-lg-12
        h1 {{step.label}}
    .col-md-4
        img(ng-src="{{step.img}}")
    .col-md-8
        p {{step.desc}}
    .col-lg-12(ng-show="checkMyStep()") 
        a.btn.btn-danger.pull-xs-right(ng-click='deleteStep()') Удалить
        a.btn.btn-my.pull-xs-right(ng-href='#/steps/edit/{{step._id}}') Редактировать
