include header
div(id='services top-services', ng-controller='servicesController')
  .inner
    .container-fluid
      .row
        .col-lg-12
          h2 &Tcy;&ocy;&pcy;&ocy;&vcy;&ycy;&iecy; &ucy;&scy;&lcy;&ucy;&gcy;&icy;
      .row
        .col-md-3.services-item(ng-repeat='service in services')
          .services-item-wrap
            a.service-item-middle(href='')
              img(ng-src='{{service.img}}', alt='{{service.title}}')
              h3
                | {{service.title}}
            .service-item-bottom.clearfix
              a.icn-heart.hint--top.pull-xs-left(href='', data-hint='Добавить в любимые')
                i.fa.fa-heart
              strong.pull-xs-right {{service.price}} {{service.currency}}
      .row
        .col-lg-12
          form.form-search(name='search', ng-submit='addService()')
            .form-group
              .input-group
                input.form-control(required='', type='text', placeholder='Что я сделаю ?', ng-model='newService.title').input-group
                input.form-control(required='', type='text', placeholder='Цена', ng-model='newService.price')
              button.btn.btn-my.btn-my-outline(type='submit') Добавить
include footer
