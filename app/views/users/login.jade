include ../header
#login
    .inner
        .container-fluid
            .row
                .col-lg-12
                    form.form-login(name='search', action='/users/login', method='POST')
                        -if (noticeWarning)
                            .alert.alert-danger= noticeWarning
                        -if (noticeSuccess)
                            .alert.alert-success= noticeSuccess
                        h1 #{headerTitle}
                        .form-group
                            input.form-control(required='', type='text', placeholder='E-mail', name='email', maxlength='80')
                        .form-group
                            input.form-control(required='', type='password', placeholder='Пароль' name='password')
                        button.btn.btn-my.btn-my-outline(type='submit') #{buttonName}
                        .registrations
                            br
                            a(href="/users/signup") Зарегистрироваться
include ../footer