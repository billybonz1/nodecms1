include ../header
#register
    .inner
        .container-fluid
            .row
                .col-lg-12
                    form.form-login(name='search', action='/users/signup', method='POST')
                        -if (notice)
                            .alert.alert-danger= notice
                        h1 Регистрация
                        .form-group
                            input.form-control(required='', type='text', placeholder='E-mail', name='email')
                        .form-group
                            input.form-control(required='', type='password', placeholder='Пароль' name='pass')
                        .form-group
                            input.form-control(required='', type='password', placeholder='Пароль еще раз' name='passAgain')
                        button.btn.btn-my.btn-my-outline(type='submit') Зарегистрироваться
                        .registrations
                            br
                            a(href="/users/login") Войти